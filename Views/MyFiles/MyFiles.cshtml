@model Project_Buddy.Models.Group
@{
    ViewBag.Title = "MyFiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/MainFile.css" rel="stylesheet">
<style>
    body {
        background-image: none;
        background-color: white;
    }
</style>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Group View</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/simple-sidebar.css" rel="stylesheet">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->

    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>


</head>

<body>

    <div id="wrapper" style="color:white">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        @Model.group_name
                    </a>
                </li>
                <li>
                    <a href="/AddMember/AddMember?gId=@Model.group_id">Add Member</a>
                </li>
                <li>
                    <a href="/DeleteMember/DeleteMember?gId=@Model.group_id">Delete Member</a>
                </li>
                <li>
                    <a href="/DeleteGroup/DeleteGroup?gId=@Model.group_id">Delete Group</a>
                </li>
                <li>
                    <a href="/MyFiles/MyFiles?gId=@Model.group_id">My Files</a>
                </li>

            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">

                        <form action="/MyFiles/Upload" method="post" enctype="multipart/form-data">
                            <input name="image" type="file" class="btnnormal"/>



                            <input type="submit"value="Upload" class="btnnormal"/>
                        </form>

                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <a href="#menu-toggle" class="btn btndefault" id="menu-toggle">Toggle Menu</a>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="~/js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    </body>
</html>
